# ========================================
# ORCA Frontend - Microservices URLs
# ========================================
# Em ambiente Docker (container-to-container): Use nomes de serviço
# Em desenvolvimento local: Use http://localhost:PORT
# Em produção: Use URLs externas com domínios

NEXT_PUBLIC_IDENTITY_API=http://identity-api:5002
NEXT_PUBLIC_CATALOG_API=http://catalog-api:5001
NEXT_PUBLIC_FORMS_API=http://forms-api:5003
NEXT_PUBLIC_REQUESTS_API=http://requests-api:5004
NEXT_PUBLIC_ORCHESTRATOR_API=http://orchestrator-api:5005

# ==========================================
# LDAP/Active Directory - Identity Service
# ==========================================

# Modo de operação: true = usa credenciais mock | false = conecta ao LDAP/AD real
LDAP_USE_MOCK_MODE=true

# Servidor LDAP/Active Directory
LDAP_HOST=ldap.empresa.com

# Porta do servidor (389=LDAP padrão, 636=LDAPS com SSL/TLS)
LDAP_PORT=389

# Base DN (Distinguished Name) - ajuste conforme sua estrutura AD
LDAP_BASE_DN=dc=empresa,dc=com

# Domínio do Active Directory (usado para autenticação DOMAIN\username)
LDAP_DOMAIN=EMPRESA

# Service Account (recomendado para buscar grupos)
LDAP_SERVICE_ACCOUNT_DN=CN=_svcmonitoringIACP,OU=Contas de Servico,OU=Contas de Infraestrutura,OU=Gerenciamento,OU=BMFBovespa,DC=corporate,DC=int
LDAP_SERVICE_ACCOUNT_PASSWORD=change_me

# Usar SSL/TLS para conexão segura (recomendado em produção)
LDAP_USE_SSL=false

# Timeout em segundos para operações LDAP
LDAP_TIMEOUT=30

# Atributos LDAP (padrões para Active Directory)
LDAP_USERNAME_ATTR=sAMAccountName
LDAP_EMAIL_ATTR=mail
LDAP_GROUP_ATTR=memberOf

# ========================================
# External Services
# ========================================
# AWX (Ansible Automation Platform)
AWX_HOST=https://awx.example.com
AWX_TOKEN=your_awx_token
AWX_USERNAME=admin
AWX_PASSWORD=

# OO (Operations Orchestration)
OO_HOST=https://oo.example.com
OO_USERNAME=admin
OO_PASSWORD=

# ========================================
# Database
# ========================================
DB_PASSWORD=orca123
DB_USER=orca

# ========================================
# Cache
# ========================================
REDIS_PASSWORD=

# General
ASPNETCORE_ENVIRONMENT=Development
LOG_LEVEL=Information

